<article>
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'article_title' %}
        <div class="flex items-center justify-center">
          <div class="max-w-7xl backdrop:text-center">
            <a href="{{ blog.url }}" class="mb-3 text-base uppercase text-gray-500 hover:text-gray-900 font-bold">
              {{- blog.title -}}
            </a>
            <h1 class="font-medium text-4xl">{{ article.title }}</h1>
          </div>
        </div>
      {% when 'article_author' %}
        <div class="flex items-center justify-center">
          <div class="max-w-7xl text-center">
            {% if section.settings.enable_author %}
              <small>{{ article.author }}</small>
            {% endif %}
          </div>
        </div>

      {% when 'article_publish_date' %}
        <div class="flex items-center justify-center">
            <div class="max-w-7xl text-center">
                {% if section.settings.enable_puslished_data %}
                    <time datetime="{{ article.published_at | date: format: 'on_date' }}">
                      {{- article.published_at | date: '%Y-%m-%d' -}}
                    </time>
                {% endif %}
            </div>
        </div>
      {% when 'featured_image' %}
        <div class="max-w-7xl text-center bg-blue-100 rounded-lg mx-auto overflow-hidden">
            {% if article.image != blank %}
                <img class="w-full h-80 md:h-96 object-cover object-center p-5" src="{{ article.image | image_url: width: 1000 }}" loading="lazy" width="1000" height="700">
            {% else %}
                {% assign placeholder_image = 'lifestyle-1' %}
                {{ placeholder_image | placeholder_svg_tag: 'w-full h-80 md:h-96 object-cover object-center p-5' }}
            {% endif %}
        </div>

       
      {% when 'article_content' %}
        <div>{{ article.content }}</div>

      {% else %}

    {% endcase %}
  {% endfor %}
</article>

{% schema %}
{
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_author",
      "default": true,
      "label": "Display Author"
    },
    {
      "type": "checkbox",
      "id": "enable_puslished_data",
      "default": true,
      "label": "Display Publish Date"
    }
  ],
  "blocks": [
    {
      "type": "article_title",
      "name": "Title",
      "limit": 1
    },
    {
      "type": "article_author",
      "name": "Author",
      "limit": 1
    },
    {
      "type": "article_publish_date",
      "name": "Publish Date",
      "limit": 1
    },
    {
      "type": "featured_image",
      "name": "Thumbnail",
      "limit": 1
    },
    {
      "type": "article_content",
      "name": "Post Body",
      "limit": 1
    }
  ]
}
{% endschema %}
