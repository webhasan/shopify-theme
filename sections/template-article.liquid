<article>
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'article_title' %}
        <div class="flex items-center justify-center">
            <div class="max-w-7xl">
                <a href="{{ blog.url }}" class="text-base uppercase text-gray-500 hover:text-gray-900 font-bold">{{ blog.title }}</a>
                <h1 class="font-medium text-2xl">{{ article.title }}</h1>
            </div>
        </div>

      {% when 'article_author' %}
        {% if section.settings.enable_author %}
          <small>{{ article.author }}</small>
        {% endif %}

      {% when 'article_publish_date' %}
        {% if section.settings.enable_puslished_data %}
          <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
            {{- article.published_at | date: '%Y-%m-%d' -}}
          </time>
        {% endif %}

      {% when 'featured_image' %}
        <img src="{{ article.image | image_url: width: 1000 }}" loading="lazy" width="1000" height="700">

      {% when 'article_content' %}
        <div>{{ article.content }}</div>

      {% else %}

    {% endcase %}
  {% endfor %}
</article>

{% schema %}
{
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_author",
      "default": true,
      "label": "Display Author"
    },
    {
      "type": "checkbox",
      "id": "enable_puslished_data",
      "default": true,
      "label": "Display Publish Date"
    }
  ],
  "blocks": [
    {
      "type": "article_title",
      "name": "Title",
      "limit": 1
    },
    {
      "type": "article_author",
      "name": "Author",
      "limit": 1
    },
    {
      "type": "article_publish_date",
      "name": "Publish Date",
      "limit": 1
    },
    {
      "type": "featured_image",
      "name": "Thumbnail",
      "limit": 1
    },
    {
      "type": "article_content",
      "name": "Post Body",
      "limit": 1
    }
  ]
}
{% endschema %}
